<setup>
  <global
    compile_mode                          = "release"
    code_version                          = "classic"
    vector_instruction_set                = "avx"
    parallelization                       = "mpi"
    scalasca                              = "none"
    mesh_format                           = "Gambit3D-fast"
    number_of_quantities                  = "9"
    number_of_basis_functions             = "4 10 20 35 56"
